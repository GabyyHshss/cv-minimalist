---
import Section from "../Section.astro";

import { work } from "@cv"
---

<Section title="Experience">
    <ul>
        {work.map(({name, endDate,
        position, summary, onCourse, data})=> {
            const endYear = endDate != null ? new Date(endDate).getFullYear(): "Finalizando Ãºltimo cuatrimestre"
            const years = `${endYear} - ${onCourse}`
            
            return (
                <li>
                    <article>
                        <header>
                        <h3>{name}</h3>    
                        <h4>{position}</h4>
                        </header>

                        <footer>
                            <p>{summary}</p>
                            <p id="data">+ {data}</p>
                        </footer>
                    </article>
                </li>
                )
        })}
    </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  p {
    margin: 0;
    color: #333;
    font-size: 0.9rem;
    line-height: 1.5;
    text-wrap: balance;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  article h4 {
    color: #222;
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  #data{
    color: #222;
    font-weight: 600;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
  
</style>