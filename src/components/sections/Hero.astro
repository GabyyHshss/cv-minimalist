---
import { basics } from '@cv'
import Section from '@/components/Section.astro'
import Mail from '@/icons/Mail.astro'
import Phone from '@/icons/Phone.astro'
import GitHub from '@/icons/GitHub.astro'
import LinkedIn from '@/icons/LinkedIn.astro'
import Portfolio from '@/icons/portfolio_bag.astro'
import WorldMap from '@/icons/WorldMap.astro'

const {name, label, image, location, profiles, email} = basics
const {city, region} = location

const SOCIAL_ICONS: Record<string, any> = {
    GitHub,
    LinkedIn,
    Portfolio
}

// LinkedInd
const linkedInfo = profiles.find(({ network }) => network === "LinkedIn")
const linkedUrl = linkedInfo?.url

// GitHub
const linkedInfo2 = profiles.find(({ network }) => network === "GitHub")
const linkedUrl2 = linkedInfo2?.url

// Cv WebSite
const linkedInfo3 = profiles.find(({ network }) => network === "Portfolio")
const linkedUrl3 = linkedInfo3?.url

const printInfo = [email].filter(Boolean).join(" â€¢ ")
const printInfoLinked = [linkedUrl ]

const printInfoLinked2 = [linkedUrl2 ]
const printInfoLinked3 = [linkedUrl3 ]

---

<Section>
    <div class="container">
        <div class="info">
            <h1>{name}</h1>
            <p class="label">{label}</p>
            <span>
                <WorldMap />
                {city}, {region}
            </span>
            <footer class="print">
                    {printInfo} </br>
                    {printInfoLinked} </br>
                    {printInfoLinked2} </br>
                    {printInfoLinked3}
                </footer>
                <footer class="no-print">
            
                {
                    profiles.map(({ network, url}) => {
                        const Icon = SOCIAL_ICONS[network]

                        return (
                            <a
                                href={url}
                                title={`Visitar el Perfil de ${name} en ${network}`}
                                target="_blank"
                                rel="noopener noreferrer"
                            >
                                <Icon />
                            </a>
                        )
                    })
                    
                }

            </footer>
        </div>
        <figure>
            <img src={image} alt={name}/>
        </figure>
    </div>
</Section>

<style>
    .container {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
    }

    .info{
        display: flex;
        flex-direction: column;
        gap: 0.05rem;
        padding-right: 32px;
    }

    h1 {
        font-size: 2rem;
    }

    .label {
        color: #444;
        margin-top: 5px;
        text-wrap: Balance;
        font-weight: 500;
        font-size: 1.1rem;
    }

    h2 {
        margin: 0;
		color: #444;
		font-size: 0.9rem;
		line-height: 1.5;
		text-wrap: Balance;
        font-weight: 500;
    }

    img {
        aspect-ratio: 1 / 1;
        object-fit: cover;
        width: 148px;
        border-radius: 32px;
    }

    span{
        color: #666;
        display: flex;
        align-items: center;
        gap: 0.25rem;
        font-size: 0.85rem;
        letter-spacing: -0.05rem;
    }
    
    footer {
        color: #555;
        font-size: 0.65rem;
        display: flex;
        gap: 4px;
        margin-top: 8px;
    }

    footer a{
        color: #777;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #eee;
        padding: 4px;
        height: 32px;
        width: 32px;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

    footer a:hover {
        background: #eee;
        border: 1px solid #ddd;
    }

    @media ((max-width: 430px)) {
        img {
            margin-right: 15px;
        }
    }
</style>










