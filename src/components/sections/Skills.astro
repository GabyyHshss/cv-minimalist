---
import Section from "../Section.astro";

import { skills } from "@cv"
---

<Section title="Mis Habilidades">

    <ul>
        {skills.map(({name, highlights}) => {
            return (
                <li>
                    <article>
            <!-- Nombree -->
                        <header>
                        <h3>

                            <a title={`Ver el proyecto ${name}`}>
                                {name}
                            </a>
        
                        </h3>
                            
                        </header>    
            <!--Decripcionn -->
                        <footer>
                                {
                                    highlights.map((highlights) =>{
                                    return <span>{highlights}</span>
                                        }
                                    )
                                }
    
                        </footer>
                        
                    </article>    
                </li>
                )
            })
        }
        </ul>
</Section>

<style>

    ul {
    display: grid;
    grid-template-columns: repeat(auto-fit,minmax(100px, 1fr));
    gap: 1rem;
   }

   article {
    border-radius: 8px;
    border: 1px solid #888;
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
   }

   article:hover {
    border: 1px solid #444;
   }

   article header {
    flex: 1;
   }

   article h3 {
    margin-bottom: 4px;
   }

   article a {
    color: #111;
   }

   article a:hover {
    text-decoration: underline;
   }

   article p {
    font-size: 0.8rem;
    line-height: 1.2rem;
    margin-bottom: 4px;
   }

   article h3 span {
    color: rgb(0, 255, 64);
   }

   footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.6rem;
   }

   footer span {
    border-radius: 6px;
    background: #eee;
    color: #444;
    font-size: 0.7rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
   }
</style>