---
import Section from "../Section.astro"
import HTML from "@/icons/html.astro"
import CSS from "@/icons/css.astro"
import JavaScript from "@/icons/javascript.astro"
import react from "@/icons/react.astro"
import MongoDB from "@/icons/mongo.astro"
import Java from "@/icons/java.astro"
import SpringBoot from "@/icons/spring.astro"
import MySQL from "@/icons/sql.astro"
import Git from "@/icons/git.astro"
import GitHub from "@/icons/GitHub.astro"
import English  from "@/icons/english.astro"
import { skills } from "@cv"

const SKILLS_ICONS: Record<string, any> = {
  HTML,
  CSS,
  JavaScript,
  react,
  Java,
  SpringBoot,
  MongoDB,
  MySQL,
  Git,
  GitHub,
  English
}
---

<Section title="Skills">
    <ul>
      {
        skills.map(({ name }) => {
          const iconName = name === "Next.js" ? "Next" : name
          const Icon = SKILLS_ICONS[iconName]
  
          return (
            <li>
              {Icon && <Icon />} <span>{name}</span>
            </li>
          )
        })
      }
    </ul>
  </Section>
  
  <style>
    ul {
      display: inline-flex;
      gap: 8px;
      flex-wrap: wrap;
      justify-content: center;

    }
  
    li {
      align-items: center;
      background: #eee;
      border-radius: 6px;
      color: black;
      display: flex;
      font-size: 0.8rem;
      font-weight: 500;
      gap: 4px;
      padding: 0.2rem 0.6rem;
    }
  </style>